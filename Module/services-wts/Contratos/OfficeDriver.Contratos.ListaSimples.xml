<?xml version="1.0"?>
<root>
  <OBJECT NAME="Contratos">
    <METHOD NAME="ListaSimples" DESCRIPTION="" VERSION="14" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="Cliente" FORMAT="N" SIZE="8" FLAGS="2" PROJECTION="0" FIELDLABEL="Cliente" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="Id" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" FIELDLABEL="Id" CTAB="0"/>
        <FIELD NAME="Descricao" SIZE="100" FLAGS="1" PROJECTION="0" FIELDLABEL="Descricao" CTAB="0"/>
        <FIELD NAME="Numero" SIZE="15" FLAGS="1" PROJECTION="0" FIELDLABEL="Numero" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT
  CN.ID,
  CN.DESCRICAO,
  CN.NUMERO
FROM CONTRATOS CN
