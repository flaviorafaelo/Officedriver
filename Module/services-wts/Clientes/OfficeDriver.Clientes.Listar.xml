<?xml version="1.0"?>
<root>
  <OBJECT NAME="Clientes">
    <METHOD NAME="Listar" DESCRIPTION="" VERSION="62" INTFTYPE="5" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="Filtro" FORMAT="N" SIZE="8" FLAGS="1" DEFAULT="1" PROJECTION="0" ORDER="1" LOOKUP="list:'1','Cliente';'2','CNPJ';'3','CPF';" FIELDLABEL="Filtrar por" CTAB="0"/>
        <PARAM NAME="Nome" SIZE="100" FLAGS="1" VISIBILITYRULE="(Filtro = 1)" PROJECTION="0" ORDER="2" FIELDLABEL="Nome" CTAB="0"/>
        <PARAM NAME="CNPJ" SIZE="20" FLAGS="1" MASK="###.###.###/####-##" VISIBILITYRULE="(Filtro = 2)" PROJECTION="0" ORDER="4" FIELDLABEL="Cnpj" CTAB="0"/>
        <PARAM NAME="CPF" SIZE="14" FLAGS="1" MASK="###.###.###-##" VISIBILITYRULE="(Filtro = 3)" PROJECTION="0" ORDER="3" FIELDLABEL="Cpf" CTAB="0"/>
        <PARAM NAME="Situacao" FORMAT="N" SIZE="8" FLAGS="1" DEFAULT="2" PROJECTION="0" ORDER="5" LOOKUP="list:'0','Inativo';'1','Ativo';'2','Todos';" FIELDLABEL="Situa&#231;&#227;o" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="Id" FORMAT="+" SIZE="8" FLAGS="1024" PROJECTION="0" FIELDLABEL="Id" CTAB="0"/>
        <FIELD NAME="Nome" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Nome" CTAB="0"/>
        <FIELD NAME="CNPJCPF" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Cnpj/cpf" CTAB="0"/>
        <FIELD NAME="Situacao" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="9" LOOKUP="list:'0','Inativo';'1','Ativo';'2','Todos';" FIELDLABEL="Situa&#231;&#227;o" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT  ID, NOME, #NULL_TO_S(CPF,CNPJ) AS CNPJCPF, #SELECT(SITUACAO,0:{'Inativo'}, else:{'Ativo'}) as SITUACAO
FROM CLIENTES
WHERE #SELECT(FILTRO,1:{[AND NOME LIKE :NOME]},2:{[AND ;CNPJ=:CNPJ]}, ELSE:{[ CPF=:CPF]})
#SELECT(SITUACAO,2:{}, ELSE:{[AND SITUACAO = :SITUACAO]});
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>