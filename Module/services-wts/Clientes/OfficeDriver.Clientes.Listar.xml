<?xml version="1.0"?>
<root>
  <OBJECT NAME="Clientes">
    <METHOD NAME="Listar" DESCRIPTION="" VERSION="41" INTFTYPE="5" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="Filtro" FORMAT="N" SIZE="8" FLAGS="1" DEFAULT="1" PROJECTION="0" ORDER="1" LOOKUP="list:'1','Cliente';'2','CNPJ';'3','CPF';" FIELDLABEL="Filtrar por" CTAB="0"/>
        <PARAM NAME="Nome" SIZE="100" FLAGS="1" VISIBILITYRULE="(Filtro = 1)" PROJECTION="0" ORDER="2" FIELDLABEL="Nome" CTAB="0"/>
        <PARAM NAME="CNPJ" SIZE="20" FLAGS="1" MASK="###.###.###/####-##" VISIBILITYRULE="(Filtro = 2)" PROJECTION="0" ORDER="4" FIELDLABEL="Cnpj" CTAB="0"/>
        <PARAM NAME="CPF" SIZE="14" FLAGS="1" MASK="###.###.###-##" VISIBILITYRULE="(Filtro = 3)" PROJECTION="0" ORDER="3" FIELDLABEL="Cpf" CTAB="0"/>
        <PARAM NAME="Situacao" FORMAT="N" SIZE="8" FLAGS="1" DEFAULT="3" PROJECTION="0" ORDER="5" LOOKUP="list:'1','Ativos';'2','Inativos';'3','Todos';" FIELDLABEL="Situa&#231;&#227;o" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="Id" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Id" CTAB="0"/>
        <FIELD NAME="Nome" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Nome" CTAB="0"/>
        <FIELD NAME="CNPJ/CPF" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="9" FIELDLABEL="Cnpj/cpf" CTAB="0"/>
        <FIELD NAME="Ativo" FORMAT="B" SIZE="1" FLAGS="1" PROJECTION="0" FIELDLABEL="Ativo" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT  ID, NOME, CNPJCPF, ATIVO
FROM CLIENTES
WHERE #SELECT(FILTRO,1:{[AND NOME LIKE :NOME]},2:{[AND CNPJ=:CNPJ]}, ELSE:{[ CPF=:CPF]})
#SELECT(SITUACAO,1:{AND ATIVO = "T"},2:{AND ATIVO = "F"}, ELSE:{});
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>