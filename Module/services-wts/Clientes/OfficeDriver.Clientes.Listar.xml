<?xml version="1.0"?>
<root>
  <OBJECT NAME="Clientes">
    <METHOD NAME="Listar" DESCRIPTION="" VERSION="16" INTFTYPE="5" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="Filtro" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="1" LOOKUP="list:'1','Cliente';'2','CNPJ/CPF';'3','Contrato';" FIELDLABEL="Filtrar por" CTAB="0"/>
        <PARAM NAME="Valor" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="2" FIELDLABEL="Valor" CTAB="0"/>
        <PARAM NAME="Situacao" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="3" LOOKUP="list:'1','Ativos';'2','Inativos';'2','Todos';" FIELDLABEL="Situa&#231;&#227;o" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="Id" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Id" CTAB="0"/>
        <FIELD NAME="Nome" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="Nome" CTAB="0"/>
        <FIELD NAME="CNPJ/CPF" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Cnpj/cpf" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT  ID, NOME, CNPJCPF
FROM CLIENTES
WHERE #SELECT(FILTRO,1:{[AND NOME LIKE %:VALOR%]},ELSE:{[AND (CNPJ=:VALOR OR CPF=:VALOR])}) [AND SITUACAO=:SITUACAO];
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>