<?xml version="1.0"?>
<root>
  <OBJECT NAME="Clientes">
    <METHOD NAME="Consultar" DESCRIPTION="" VERSION="36" INTFTYPE="6" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="Id" FORMAT="+" SIZE="8" FLAGS="1024" PROJECTION="0" ORDER="1" FIELDLABEL="Id" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
          <GROUP NAME="Endere&#231;os"/>
          <GROUP NAME="Contatos"/>
        </GROUPS>
        <FIELD NAME="Id" FORMAT="+" SIZE="8" FLAGS="1024" PROJECTION="0" ORDER="1" FIELDLABEL="Id" CTAB="0"/>
        <FIELD NAME="Nome" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="1" FIELDLABEL="Nome" CTAB="0"/>
        <FIELD NAME="TipoPessoa" SIZE="1" FLAGS="1" PROJECTION="0" ORDER="2" LOOKUP="list:'F','F&#237;sica';'J','Jur&#237;dica';" FIELDLABEL="Tipo de Pessoa" CTAB="0"/>
        <FIELD NAME="CPF" SIZE="14" FLAGS="1" MASK="###.###.###-##" PROJECTION="0" ORDER="3" FIELDLABEL="Cpf" CTAB="0"/>
        <FIELD NAME="CNPJ" SIZE="20" FLAGS="1" MASK="###.###.###/####-##" PROJECTION="0" ORDER="4" FIELDLABEL="Cnpj" CTAB="0"/>
        <FIELD NAME="Logo" FORMAT="I" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="Logo" CTAB="0"/>
        <FIELD NAME="Endereco" FORMAT="R" FLAGS="1" STYLE="8" PROJECTION="0" ORDER="8" FIELDLABEL="Endere&#231;os" NESTEDNAME="OfficeDriver.Pessoas.Endereco" GROUPNAME="Endere&#231;os" CTAB="0"/>
        <FIELD NAME="Contatos" FORMAT="R" FLAGS="1" PROJECTION="0" ORDER="10" FIELDLABEL="Contatos" NESTEDNAME="OfficeDriver.Pessoas.Contato" GROUPNAME="Contatos" CTAB="0"/>
        <FIELD NAME="Situacao" FORMAT="N" SIZE="8" FLAGS="17" PROJECTION="0" ORDER="5" LOOKUP="list:'0','Inativo';'1','Ativo';" FIELDLABEL="Ativo" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT
   ID,
   NOME,
   TIPOPESSOA,
   CPF,
   CNPJ,
   LOGO,
   SITUACAO
   #ROWSET({SELECT:ENDERECO
                      TIPOPESSOA,
                      PESSOA,
                      CEP,
                      LOGRADOURO,
                      NUMERO,
                      COMPLEMENTO,
                      BAIRRO,
                      ESTADO,
                      CIDADE
                FROM ENDERECOS
                WHERE TIPOPESSOA = 1 AND
                      PESSOA=:ID})
   #ROWSET({SELECT:CONTATOS
                  TIPOPESSOA,
                  PESSOA,
                  NOME,
                  TIPO,
                  DDD,
                  TELEFONE,
                  EMAIL
            FROM CONTATOS
            WHERE TIPOPESSOA = 1 AND
                  PESSOA=:ID})
FROM CLIENTES
WHERE ( ID=:ID)
</ACTIONSCRIPT>
